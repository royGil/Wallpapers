{
	"extends": "@tsconfig/node12/tsconfig.json",
	"compilerOptions": {
		"lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string"],
		"types": ["node"],
		"module": "commonjs",
		"target": "es2019",
		"noImplicitAny": false,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}